<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
  xsi:type="MailApp">

  <Id>f2c8e4b7-3d91-4a6f-b8c2-1e9d7a5b3c4f</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>BlocIQ Ltd</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="BlocIQ Reply Generator"/>
  <Description DefaultValue="Generate AI-powered property management replies directly in Outlook"/>

  <IconUrl DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-80.png"/>
  <SupportUrl DefaultValue="https://www.blociq.co.uk"/>

  <AppDomains>
    <AppDomain>https://blociq.co.uk</AppDomain>
    <AppDomain>https://www.blociq.co.uk</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <!-- Mailbox 1.3+ is required for compose commands -->
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://www.blociq.co.uk/outlook-addin/functions-reply.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>

  <!-- Restrict to compose forms -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                    xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="blocIQReplyFunctions"/>
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="groupLabel"/>
                <Control xsi:type="Button" id="msgComposeGenerateReplyButton">
                  <Label resid="buttonLabel"/>
                  <Supertip>
                    <Title resid="buttonSuperTipTitle"/>
                    <Description resid="buttonSuperTipDescription"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>generateBlocIQReply</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-16.png"/>
        <bt:Image id="icon32" DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-32.png"/>
        <bt:Image id="icon80" DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <!-- FunctionFile must be HTML, hosted under HTTPS -->
        <bt:Url id="blocIQReplyFunctions" DefaultValue="https://www.blociq.co.uk/outlook-addin/functions-reply.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="BlocIQ Reply"/>
        <bt:String id="buttonLabel" DefaultValue="Generate Reply"/>
        <bt:String id="buttonSuperTipTitle" DefaultValue="BlocIQ AI Reply"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="buttonSuperTipDescription" DefaultValue="Generate an AI-powered reply for this email using BlocIQ."/>
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>
</OfficeApp>
