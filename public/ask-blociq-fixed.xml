<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <!-- General Add-in Information -->
  <Id>8b8fe65f-2c9e-4d8a-b8c3-1234567890ab</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>BlocIQ</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <!-- Add-in Display Name -->
  <DisplayName DefaultValue="Ask BlocIQ" />

  <!-- Add-in Description -->
  <Description DefaultValue="AI-powered property management assistant, powered by BlocIQ" />

  <!-- Icon URLs -->
  <IconUrl DefaultValue="https://www.blociq.co.uk/icons/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://www.blociq.co.uk/icons/icon-64.png" />

  <!-- Add-in Source Location -->
  <SourceLocation DefaultValue="https://www.blociq.co.uk/addin/ask" />

  <!-- Add-in Permissions -->
  <Permissions>ReadWriteMailbox</Permissions>

  <!-- Requirements -->
  <Requirements>
    <Sets DefaultMinVersion="1.3">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <!-- Rules -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="ReadOrEdit" />
  </Rule>

  <!-- Version Overrides -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">

      <!-- Requirements -->
      <Requirements>
        <bt:Sets DefaultMinVersion="1.3">
          <bt:Set Name="Mailbox" />
        </bt:Sets>
      </Requirements>

      <!-- Hosts -->
      <Hosts>
        <Host xsi:type="MailHost">

          <!-- Desktop Form Factor -->
          <DesktopFormFactor>
            <!-- Pinned Task Pane Extension Point -->
            <ExtensionPoint xsi:type="PinnedTaskPane">
              <OfficeTab id="TabDefault">
                <Group id="ChatGroup">
                  <Label resid="GroupLabel" />
                  <Control xsi:type="Button" id="ChatButton">
                    <Label resid="TaskpaneButtonLabel" />
                    <Supertip>
                      <Title resid="TaskpaneButtonLabel" />
                      <Description resid="TaskpaneButtonTooltip" />
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon16" />
                      <bt:Image size="32" resid="Icon32" />
                      <bt:Image size="80" resid="Icon80" />
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="TaskpaneUrl" />
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>
          </DesktopFormFactor>

          <!-- Mobile Form Factor -->
          <MobileFormFactor>
            <FunctionFile resid="TaskpaneUrl" />
            <ExtensionPoint xsi:type="MobileMessageReadCommandSurface">
              <Group id="MobileChatGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="MobileButton" id="MobileChatButton">
                  <Label resid="TaskpaneButtonLabel" />
                  <Icon>
                    <bt:Image size="25" resid="Icon25" />
                    <bt:Image size="32" resid="Icon32" />
                    <bt:Image size="48" resid="Icon48" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskpaneUrl" />
                  </Action>
                </Control>
              </Group>
            </ExtensionPoint>
          </MobileFormFactor>

        </Host>
      </Hosts>

      <!-- Resources -->
      <Resources>
        <bt:Images>
          <bt:Image id="Icon16" DefaultValue="https://www.blociq.co.uk/icons/icon-16.png" />
          <bt:Image id="Icon25" DefaultValue="https://www.blociq.co.uk/icons/icon-25.png" />
          <bt:Image id="Icon32" DefaultValue="https://www.blociq.co.uk/icons/icon-32.png" />
          <bt:Image id="Icon48" DefaultValue="https://www.blociq.co.uk/icons/icon-48.png" />
          <bt:Image id="Icon80" DefaultValue="https://www.blociq.co.uk/icons/icon-80.png" />
        </bt:Images>

        <bt:Urls>
          <bt:Url id="TaskpaneUrl" DefaultValue="https://www.blociq.co.uk/addin/ask" />
        </bt:Urls>

        <bt:ShortStrings>
          <bt:String id="GroupLabel" DefaultValue="BlocIQ AI" />
          <bt:String id="TaskpaneButtonLabel" DefaultValue="Ask BlocIQ" />
        </bt:ShortStrings>

        <bt:LongStrings>
          <bt:String id="TaskpaneButtonTooltip" DefaultValue="Open Ask BlocIQ AI assistant for property management questions and email analysis" />
        </bt:LongStrings>
      </Resources>

    </VersionOverrides>
  </VersionOverrides>

</OfficeApp>