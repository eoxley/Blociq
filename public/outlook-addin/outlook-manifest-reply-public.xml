<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
  xsi:type="MailApp">

  <Id>a1b2c3d4-5e6f-4c1a-9f6e-2d8c4b7a1e3f</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>BlocIQ Ltd</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="BlocIQ Public Reply Generator"/>
  <Description DefaultValue="Generate AI-powered property management replies - Public Version (No Building Data)"/>

  <IconUrl DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-128.png"/>
  <SupportUrl DefaultValue="https://www.blociq.co.uk"/>

  <AppDomains>
    <AppDomain>https://blociq.co.uk</AppDomain>
    <AppDomain>https://www.blociq.co.uk</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <!-- Mailbox 1.3+ is required for compose commands -->
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://www.blociq.co.uk/outlook-addin/functions-reply-public.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>

  <!-- Restrict to compose forms -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                    xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="blocIQPublicReplyFunctions"/>
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="groupLabel"/>
                <Control xsi:type="Button" id="msgComposeGenerateReplyButton">
                  <Label resid="buttonLabel"/>
                  <Supertip>
                    <Title resid="buttonSuperTipTitle"/>
                    <Description resid="buttonSuperTipDescription"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>generateBlocIQReply</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-16.png"/>
        <bt:Image id="icon32" DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-64.png"/>
        <bt:Image id="icon80" DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-128.png"/>
      </bt:Images>

      <bt:Urls>
        <!-- FunctionFile must be HTML, hosted under HTTPS -->
        <bt:Url id="blocIQPublicReplyFunctions" DefaultValue="https://www.blociq.co.uk/outlook-addin/functions-reply-public.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="BlocIQ Public"/>
        <bt:String id="buttonLabel" DefaultValue="Generate Reply"/>
        <bt:String id="buttonSuperTipTitle" DefaultValue="BlocIQ Public AI"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="buttonSuperTipDescription" DefaultValue="Generate an AI-powered reply using general UK property management guidance (no building data)."/>
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>
</OfficeApp>