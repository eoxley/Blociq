<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides"
  xsi:type="MailApp">

  <Id>f2c8e4b7-3d91-4a6f-b8c2-1e9d7a5b3c4f</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>BlocIQ Ltd</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="BlocIQ Reply Generator"/>
  <Description DefaultValue="Generate professional property management replies with AI assistance"/>

  <IconUrl DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-80.png"/>

  <SupportUrl DefaultValue="https://www.blociq.co.uk"/>

  <AppDomains>
    <AppDomain>https://blociq.co.uk</AppDomain>
    <AppDomain>https://www.blociq.co.uk</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemCompose">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://www.blociq.co.uk/outlook-addin/taskpane.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">

      <Requirements>
        <bt:Sets DefaultMinVersion="1.3">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>
            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgComposeGroup">
                  <Label resid="groupLabel"/>

                  <Control xsi:type="Button" id="msgComposeOpenPaneButton">
                    <Label resid="paneButtonLabel"/>
                    <Supertip>
                      <Title resid="paneSuperTipTitle"/>
                      <Description resid="paneSuperTipDescription"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="icon16"/>
                      <bt:Image size="32" resid="icon32"/>
                      <bt:Image size="80" resid="icon80"/>
                    </Icon>
                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>generateBlocIQReply</FunctionName>
                    </Action>
                  </Control>

                </Group>
              </OfficeTab>
            </ExtensionPoint>
          </DesktopFormFactor>
        </Host>
      </Hosts>

      <Resources>
        <bt:Images>
          <bt:Image id="icon16" DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-16.png"/>
          <bt:Image id="icon32" DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-32.png"/>
          <bt:Image id="icon80" DefaultValue="https://www.blociq.co.uk/outlook-addin/icon-80.png"/>
        </bt:Images>

        <bt:Urls>
          <bt:Url id="functionFile" DefaultValue="https://www.blociq.co.uk/outlook-addin/functions.js"/>
        </bt:Urls>

        <bt:ShortStrings>
          <bt:String id="groupLabel" DefaultValue="BlocIQ Reply"/>
          <bt:String id="paneButtonLabel" DefaultValue="Generate Reply"/>
          <bt:String id="paneSuperTipTitle" DefaultValue="BlocIQ AI Reply"/>
        </bt:ShortStrings>

        <bt:LongStrings>
          <bt:String id="paneSuperTipDescription" DefaultValue="Generate a professional property management reply using BlocIQ AI"/>
        </bt:LongStrings>
      </Resources>

      <ExtensionPoint xsi:type="LaunchEvent">
        <LaunchEvents>
          <LaunchEvent Type="OnNewMessageCompose" FunctionName="onNewMessageCompose"/>
        </LaunchEvents>
        <SourceLocation resid="functionFile"/>
      </ExtensionPoint>

    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>