<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xsi:type="MailApp">

  <Id>c518d2f2-3bc7-4db4-a863-7cc313c921f5</Id>
  <Version>1.0.0.1</Version>
  <ProviderName>BlocIQ</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="BlocIQ Assistant"/>
  <Description DefaultValue="AI-powered property management assistant for email assistance and reply generation"/>
  <IconUrl DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-32.png"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://www.blociq.co.uk/outlook-addin/taskpane.html"/>
        <RequestedHeight>300</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemCompose">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://www.blociq.co.uk/outlook-addin/taskpane.html"/>
        <RequestedHeight>300</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      <Requirements>
        <bt:Sets DefaultMinVersion="1.3">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>
      <Hosts>
        <bt:Host Name="Mailbox"/>
      </Hosts>
      <Resources>
        <bt:Images>
          <bt:Image id="Icon16x16" DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-16.png"/>
          <bt:Image id="Icon32x32" DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-32.png"/>
          <bt:Image id="Icon80x80" DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-80.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="Functions.Url" DefaultValue="https://www.blociq.co.uk/outlook-addin/functions.html"/>
        </bt:Urls>
      </Resources>
      <WebApplicationInfo>
        <Id>c518d2f2-3bc7-4db4-a863-7cc313c921f5</Id>
        <Resource>https://www.blociq.co.uk</Resource>
      </WebApplicationInfo>
      <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
        <Requirements>
          <bt:Sets DefaultMinVersion="1.3">
            <bt:Set Name="Mailbox"/>
          </bt:Sets>
        </Requirements>
        <Hosts>
          <bt:Host Name="Mailbox"/>
        </Hosts>
        <Resources>
          <bt:Images>
            <bt:Image id="Icon16x16" DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-16.png"/>
            <bt:Image id="Icon32x32" DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-32.png"/>
            <bt:Image id="Icon80x80" DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-80.png"/>
          </bt:Images>
          <bt:Urls>
            <bt:Url id="Functions.Url" DefaultValue="https://www.blociq.co.uk/outlook-addin/functions.html"/>
          </bt:Urls>
        </Resources>
        <WebApplicationInfo>
          <Id>c518d2f2-3bc7-4db4-a863-7cc313c921f5</Id>
          <Resource>https://www.blociq.co.uk</Resource>
        </WebApplicationInfo>
        <FormSettings>
          <bt:Form xsi:type="ItemRead">
            <bt:DesktopSettings>
              <bt:SourceLocation DefaultValue="https://www.blociq.co.uk/outlook-addin/taskpane.html"/>
              <bt:RequestedHeight>300</bt:RequestedHeight>
            </bt:DesktopSettings>
          </bt:Form>
          <bt:Form xsi:type="ItemCompose">
            <bt:DesktopSettings>
              <bt:SourceLocation DefaultValue="https://www.blociq.co.uk/outlook-addin/taskpane.html"/>
              <bt:RequestedHeight>300</bt:RequestedHeight>
            </bt:DesktopSettings>
          </bt:Form>
        </FormSettings>
        <MessageRead>
          <bt:ExtensionPoint xsi:type="MessageReadCommandSurface">
            <bt:OfficeTab id="TabDefault">
              <bt:Group id="msgReadGroup">
                <bt:Label resid="GroupLabel"/>
                <bt:Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <bt:Label resid="TaskpaneButton.Label"/>
                  <bt:Supertip>
                    <bt:Title resid="TaskpaneButton.Label"/>
                    <bt:Description resid="TaskpaneButton.Tooltip"/>
                  </bt:Supertip>
                  <bt:Icon>
                    <bt:Image size="16" resid="Icon16x16"/>
                    <bt:Image size="32" resid="Icon32x32"/>
                    <bt:Image size="80" resid="Icon80x80"/>
                  </bt:Icon>
                  <bt:Action xsi:type="ShowTaskpane">
                    <bt:TaskpaneId>BlocIQTaskpane</bt:TaskpaneId>
                    <bt:SourceLocation resid="Taskpane.Url"/>
                  </bt:Action>
                </bt:Control>
                <bt:Control xsi:type="Button" id="msgReadGenerateReplyButton">
                  <bt:Label resid="GenerateReplyButton.Label"/>
                  <bt:Supertip>
                    <bt:Title resid="GenerateReplyButton.Label"/>
                    <bt:Description resid="GenerateReplyButton.Tooltip"/>
                  </bt:Supertip>
                  <bt:Icon>
                    <bt:Image size="16" resid="Icon16x16"/>
                    <bt:Image size="32" resid="Icon32x32"/>
                    <bt:Image size="80" resid="Icon80x80"/>
                  </bt:Icon>
                  <bt:Action xsi:type="ExecuteFunction">
                    <bt:FunctionName>generateReply</bt:FunctionName>
                  </bt:Action>
                </bt:Control>
              </bt:Group>
            </bt:OfficeTab>
          </bt:ExtensionPoint>
        </MessageRead>
        <MessageCompose>
          <bt:ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <bt:OfficeTab id="TabDefault">
              <bt:Group id="msgComposeGroup">
                <bt:Label resid="GroupLabel"/>
                <bt:Control xsi:type="Button" id="msgComposeOpenPaneButton">
                  <bt:Label resid="TaskpaneButton.Label"/>
                  <bt:Supertip>
                    <bt:Title resid="TaskpaneButton.Label"/>
                    <bt:Description resid="TaskpaneButton.Tooltip"/>
                  </bt:Supertip>
                  <bt:Icon>
                    <bt:Image size="16" resid="Icon16x16"/>
                    <bt:Image size="32" resid="Icon32x32"/>
                    <bt:Image size="80" resid="Icon80x80"/>
                  </bt:Icon>
                  <bt:Action xsi:type="ShowTaskpane">
                    <bt:TaskpaneId>BlocIQTaskpane</bt:TaskpaneId>
                    <bt:SourceLocation resid="Taskpane.Url"/>
                  </bt:Action>
                </bt:Control>
                <bt:Control xsi:type="Button" id="msgComposeGenerateReplyButton">
                  <bt:Label resid="GenerateReplyButton.Label"/>
                  <bt:Supertip>
                    <bt:Title resid="GenerateReplyButton.Label"/>
                    <bt:Description resid="GenerateReplyButton.Tooltip"/>
                  </bt:Supertip>
                  <bt:Icon>
                    <bt:Image size="16" resid="Icon16x16"/>
                    <bt:Image size="32" resid="Icon32x32"/>
                    <bt:Image size="80" resid="Icon80x80"/>
                  </bt:Icon>
                  <bt:Action xsi:type="ExecuteFunction">
                    <bt:FunctionName>generateReply</bt:FunctionName>
                  </bt:Action>
                </bt:Control>
              </bt:Group>
            </bt:OfficeTab>
          </bt:ExtensionPoint>
        </MessageCompose>
        <bt:Resources>
          <bt:Images>
            <bt:Image id="Icon16x16" DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-16.png"/>
            <bt:Image id="Icon32x32" DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-32.png"/>
            <bt:Image id="Icon80x80" DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-80.png"/>
          </bt:Images>
          <bt:Urls>
            <bt:Url id="Taskpane.Url" DefaultValue="https://www.blociq.co.uk/outlook-addin/taskpane.html"/>
            <bt:Url id="Functions.Url" DefaultValue="https://www.blociq.co.uk/outlook-addin/functions.html"/>
          </bt:Urls>
          <bt:ShortStrings>
            <bt:String id="GroupLabel" DefaultValue="BlocIQ Assistant"/>
            <bt:String id="TaskpaneButton.Label" DefaultValue="Ask BlocIQ"/>
            <bt:String id="GenerateReplyButton.Label" DefaultValue="AI Generate Reply"/>
          </bt:ShortStrings>
          <bt:LongStrings>
            <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Open BlocIQ AI Assistant for property management help"/>
            <bt:String id="GenerateReplyButton.Tooltip" DefaultValue="Generate an AI-powered reply for this email"/>
          </bt:LongStrings>
        </bt:Resources>
      </VersionOverrides>
    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>