<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xsi:type="MailApp">

  <Id>85e47bf9-847d-4fa6-ab0b-7d73531345db</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>BlocIQ</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="BlocIQ AI Assistant"/>
  <Description DefaultValue="AI assistant for property management"/>

  <IconUrl DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-80.png"/>

  <SupportUrl DefaultValue="https://www.blociq.co.uk"/>
  
  <AppDomains>
    <AppDomain>https://www.blociq.co.uk</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://www.blociq.co.uk/outlook-addin/taskpane.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="CommandsGroup">
                <Label resid="GroupLabel"/>
                
                <Control xsi:type="Button" id="TaskPaneButton">
                  <Label resid="TaskPaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskPaneButton.Label"/>
                    <Description resid="TaskPaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                
              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://www.blociq.co.uk/outlook-addin/icons/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://www.blociq.co.uk/outlook-addin/functions.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://www.blociq.co.uk/outlook-addin/taskpane.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="BlocIQ"/>
        <bt:String id="TaskPaneButton.Label" DefaultValue="BlocIQ Assistant"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="TaskPaneButton.Tooltip" DefaultValue="Open BlocIQ AI Assistant"/>
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>
</OfficeApp>