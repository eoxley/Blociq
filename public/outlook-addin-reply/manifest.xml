<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp 
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides" 
  xsi:type="MailApp">

  <Id>a1b2c3d4-e5f6-7890-abcd-ef1234567890</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>BlocIQ</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="BlocIQ Generate Reply"/>
  <Description DefaultValue="Generate AI-powered draft replies with BlocIQ property intelligence"/>

  <IconUrl DefaultValue="https://www.blociq.co.uk/api/outlook-addin-static/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://www.blociq.co.uk/api/outlook-addin-static/icon-80.png"/>

  <SupportUrl DefaultValue="https://www.blociq.co.uk"/>
  
  <AppDomains>
    <AppDomain>https://blociq.co.uk</AppDomain>
    <AppDomain>https://www.blociq.co.uk</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://www.blociq.co.uk/replyaddin"/>
        <RequestedHeight>300</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">

      <Requirements>
        <bt:Sets DefaultMinVersion="1.3">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>
            <!-- Message Compose Command Surface -->
            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgComposeGroup">
                  <Label resid="groupLabel"/>

                  <Control xsi:type="Button" id="msgComposeGenerateReplyButton">
                    <Label resid="generateReplyButtonLabel"/>
                    <Supertip>
                      <Title resid="generateReplySuperTipTitle"/>
                      <Description resid="generateReplySuperTipDescription"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="icon16"/>
                      <bt:Image size="32" resid="icon32"/>
                      <bt:Image size="80" resid="icon80"/>
                    </Icon>
                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>generateReply</FunctionName>
                    </Action>
                  </Control>

                </Group>
              </OfficeTab>
            </ExtensionPoint>
          </DesktopFormFactor>
        </Host>
      </Hosts>

      <Resources>
        <bt:Images>
          <bt:Image id="icon16" DefaultValue="https://www.blociq.co.uk/api/outlook-addin-static/icon-16.png"/>
          <bt:Image id="icon32" DefaultValue="https://www.blociq.co.uk/api/outlook-addin-static/icon-32.png"/>
          <bt:Image id="icon80" DefaultValue="https://www.blociq.co.uk/api/outlook-addin-static/icon-80.png"/>
        </bt:Images>

        <bt:Urls>
          <bt:Url id="taskpaneUrl" DefaultValue="https://www.blociq.co.uk/replyaddin"/>
        </bt:Urls>

        <bt:ShortStrings>
          <bt:String id="groupLabel" DefaultValue="BlocIQ AI"/>
          <bt:String id="generateReplyButtonLabel" DefaultValue="Generate Reply"/>
          <bt:String id="generateReplySuperTipTitle" DefaultValue="Generate Reply"/>
        </bt:ShortStrings>

        <bt:LongStrings>
          <bt:String id="generateReplySuperTipDescription" DefaultValue="Generate an AI-powered draft reply with BlocIQ property intelligence"/>
        </bt:LongStrings>
      </Resources>

      <!-- Function file for command handlers -->
      <FunctionFile resid="Commands.Url"/>

      <!-- Additional URLs for commands -->
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://www.blociq.co.uk/api/outlook-addin-static/commands/commands.js"/>
      </bt:Urls>

    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
