<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
  xsi:type="MailApp">

  <Id>c518d2f2-3bc7-4db4-a863-7cc313c921f5</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>BlocIQ</ProviderName>
  <DefaultLocale>en-GB</DefaultLocale>
  <DisplayName DefaultValue="BlocIQ Assistant"/>
  <Description DefaultValue="AI-powered assistant for Outlook"/>
  <IconUrl DefaultValue="https://www.blociq.co.uk/addin/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://www.blociq.co.uk/addin/icon-80.png"/>
  <SupportUrl DefaultValue="https://www.blociq.co.uk/support"/>

  <!-- Use bare domain(s), no scheme -->
  <AppDomains>
    <AppDomain>blociq.co.uk</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>

  <!-- For schema 1.1 MailApp, use FormSettings instead of DefaultSettings -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://www.blociq.co.uk/addin/taskpane.html"/>
