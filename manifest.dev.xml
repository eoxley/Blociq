<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides"
           xsi:type="MailApp">

  <Id>c518d2f2-3bc7-4db4-a863-7cc313c921f5</Id>
  <Version>1.0.0.11-dev</Version>
  <ProviderName>BlocIQ</ProviderName>
  <DefaultLocale>en-GB</DefaultLocale>
  <DisplayName DefaultValue="BlocIQ Assistant (Dev)"/>
  <Description DefaultValue="AI-powered property management assistant for Outlook - Development"/>
  <IconUrl DefaultValue="https://www.blociq.co.uk/addin/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://www.blociq.co.uk/addin/icon-80.png"/>
  <SupportUrl DefaultValue="https://www.blociq.co.uk/support"/>

  <AppDomains>
    <AppDomain>https://www.blociq.co.uk</AppDomain>
    <AppDomain>http://localhost:3000</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.10">
      <Set Name="Mailbox" MinVersion="1.10"/>
      <Set Name="Mailbox" MinVersion="1.8"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="http://localhost:3000/addin/taskpane.html"/>
        <RequestedHeight>400</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="http://localhost:3000/addin/taskpane.html"/>
        <RequestedHeight>400</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                    xsi:type="VersionOverridesV1_1">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.10">
        <bt:Set Name="Mailbox" MinVersion="1.10"/>
        <bt:Set Name="Mailbox" MinVersion="1.8"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="functionFileUrl"/>

          <!-- Task Panes -->
          <TaskPane id="taskpaneChat">
            <SourceLocation resid="taskpaneUrl"/>
            <SupportsPinning>true</SupportsPinning>
          </TaskPane>

          <!-- Read Surface -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="groupLabel"/>
                
                <!-- Chat Pane Button -->
                <Control xsi:type="Button" id="msgReadChatButton">
                  <Label resid="chatButtonLabel"/>
                  <Supertip>
                    <Title resid="chatSuperTipTitle"/>
                    <Description resid="chatSuperTipDescription"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskPaneId>taskpaneChat</TaskPaneId>
                    <SourceLocation resid="taskpaneUrl"/>
                  </Action>
                </Control>

                <!-- Generate Reply Button -->
                <Control xsi:type="Button" id="generateReplyButton">
                  <Label resid="replyButtonLabel"/>
                  <Supertip>
                    <Title resid="replySuperTipTitle"/>
                    <Description resid="replySuperTipDescription"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="replyIcon16"/>
                    <bt:Image size="32" resid="replyIcon32"/>
                    <bt:Image size="80" resid="replyIcon80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>onGenerateReplyFromRead</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <!-- Compose Surface -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="groupLabel"/>

                <!-- Chat Pane Button -->
                <Control xsi:type="Button" id="msgComposeChatButton">
                  <Label resid="chatButtonLabel"/>
                  <Supertip>
                    <Title resid="chatSuperTipTitle"/>
                    <Description resid="chatSuperTipDescription"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskPaneId>taskpaneChat</TaskPaneId>
                    <SourceLocation resid="taskpaneUrl"/>
                  </Action>
                </Control>

                <!-- Generate Reply Button -->
                <Control xsi:type="Button" id="generateReplyComposeButton">
                  <Label resid="replyButtonLabel"/>
                  <Supertip>
                    <Title resid="replySuperTipTitle"/>
                    <Description resid="replySuperTipDescription"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="replyIcon16"/>
                    <bt:Image size="32" resid="replyIcon32"/>
                    <bt:Image size="80" resid="replyIcon80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>onGenerateIntoCompose</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <!-- Main Icons -->
        <bt:Image id="icon16" DefaultValue="http://localhost:3000/icons/icon-16.png"/>
        <bt:Image id="icon32" DefaultValue="http://localhost:3000/icons/icon-32.png"/>
        <bt:Image id="icon80" DefaultValue="http://localhost:3000/icons/icon-80.png"/>
        
        <!-- Reply Icons -->
        <bt:Image id="replyIcon16" DefaultValue="http://localhost:3000/icons/reply-icon-16.png"/>
        <bt:Image id="replyIcon32" DefaultValue="http://localhost:3000/icons/reply-icon-32.png"/>
        <bt:Image id="replyIcon80" DefaultValue="http://localhost:3000/icons/reply-icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="taskpaneUrl" DefaultValue="http://localhost:3000/addin/taskpane.html"/>
        <bt:Url id="functionFileUrl" DefaultValue="http://localhost:3000/addin/functions.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="BlocIQ Assistant"/>
        <bt:String id="chatButtonLabel" DefaultValue="Chat Assistant"/>
        <bt:String id="chatSuperTipTitle" DefaultValue="BlocIQ Chat Assistant"/>
        <bt:String id="replyButtonLabel" DefaultValue="Generate Reply"/>
        <bt:String id="replySuperTipTitle" DefaultValue="Generate AI Reply"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="chatSuperTipDescription" DefaultValue="Open BlocIQ chat assistant for property management queries and email assistance."/>
        <bt:String id="replySuperTipDescription" DefaultValue="Generate an AI-powered reply using property management knowledge and lease data."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
