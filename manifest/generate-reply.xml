<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <!-- General Add-in Information -->
  <Id>9c9fe65f-3d0f-4e9b-c9d4-2345678901bc</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>BlocIQ</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <!-- Add-in Display Name -->
  <DisplayName DefaultValue="BlocIQ Generate Reply" />

  <!-- Add-in Description -->
  <Description DefaultValue="Generate intelligent email replies using BlocIQ AI assistant" />

  <!-- Icon URLs -->
  <IconUrl DefaultValue="https://www.blociq.co.uk/icons/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://www.blociq.co.uk/icons/icon-64.png" />

  <!-- Function File -->
  <FunctionFile resid="GenerateReplyFunctionFile" />

  <!-- Add-in Permissions -->
  <Permissions>ReadWriteMailbox</Permissions>

  <!-- Rules and Requirements -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="EditOrRead" />
  </Rule>

  <!-- Disable Entity Highlighting -->
  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- Version Overrides for Modern Outlook -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">

      <!-- Requirements -->
      <Requirements>
        <bt:Sets DefaultMinVersion="1.3">
          <bt:Set Name="Mailbox" />
        </bt:Sets>
      </Requirements>

      <!-- Hosts -->
      <Hosts>
        <Host xsi:type="MailHost">

          <!-- Desktop Form Factors -->
          <DesktopFormFactor>

            <!-- Message Compose Command Surface -->
            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="GenerateReplyGroup">
                  <Label resid="GenerateReplyGroupLabel" />

                  <Control xsi:type="Button" id="GenerateReplyButton">
                    <Label resid="GenerateReplyButtonLabel" />
                    <Supertip>
                      <Title resid="GenerateReplyButtonLabel" />
                      <Description resid="GenerateReplyButtonTooltip" />
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16" />
                      <bt:Image size="32" resid="Icon.32x32" />
                      <bt:Image size="80" resid="Icon.80x80" />
                    </Icon>
                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>generateReply</FunctionName>
                    </Action>
                  </Control>

                </Group>
              </OfficeTab>
            </ExtensionPoint>

            <!-- Message Read Command Surface -->
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="GenerateReplyReadGroup">
                  <Label resid="GenerateReplyGroupLabel" />

                  <Control xsi:type="Button" id="GenerateReplyReadButton">
                    <Label resid="GenerateReplyButtonLabel" />
                    <Supertip>
                      <Title resid="GenerateReplyButtonLabel" />
                      <Description resid="GenerateReplyButtonTooltip" />
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16" />
                      <bt:Image size="32" resid="Icon.32x32" />
                      <bt:Image size="80" resid="Icon.80x80" />
                    </Icon>
                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>generateReply</FunctionName>
                    </Action>
                  </Control>

                </Group>
              </OfficeTab>
            </ExtensionPoint>

          </DesktopFormFactor>

          <!-- Mobile Form Factors -->
          <MobileFormFactor>
            <ExtensionPoint xsi:type="MobileMessageReadCommandSurface">
              <Group id="GenerateReplyMobileGroup">
                <Control xsi:type="MobileButton" id="GenerateReplyMobileButton">
                  <Label resid="GenerateReplyButtonLabel" />
                  <Icon>
                    <bt:Image size="25" resid="Icon.25x25" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="48" resid="Icon.48x48" />
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>generateReply</FunctionName>
                  </Action>
                </Control>
              </Group>
            </ExtensionPoint>
          </MobileFormFactor>

        </Host>
      </Hosts>

      <!-- Resources -->
      <Resources>
        <bt:Images>
          <bt:Image id="Icon.16x16" DefaultValue="https://www.blociq.co.uk/icons/icon-16.png" />
          <bt:Image id="Icon.25x25" DefaultValue="https://www.blociq.co.uk/icons/icon-25.png" />
          <bt:Image id="Icon.32x32" DefaultValue="https://www.blociq.co.uk/icons/icon-32.png" />
          <bt:Image id="Icon.48x48" DefaultValue="https://www.blociq.co.uk/icons/icon-48.png" />
          <bt:Image id="Icon.64x64" DefaultValue="https://www.blociq.co.uk/icons/icon-64.png" />
          <bt:Image id="Icon.80x80" DefaultValue="https://www.blociq.co.uk/icons/icon-80.png" />
        </bt:Images>

        <bt:Urls>
          <bt:Url id="GenerateReplyFunctionFile" DefaultValue="https://www.blociq.co.uk/addin/reply" />
        </bt:Urls>

        <bt:ShortStrings>
          <bt:String id="GenerateReplyGroupLabel" DefaultValue="BlocIQ AI" />
          <bt:String id="GenerateReplyButtonLabel" DefaultValue="Generate Reply" />
        </bt:ShortStrings>

        <bt:LongStrings>
          <bt:String id="GenerateReplyButtonTooltip" DefaultValue="Generate an intelligent reply using BlocIQ AI based on the email content" />
        </bt:LongStrings>

      </Resources>

    </VersionOverrides>
  </VersionOverrides>

</OfficeApp>