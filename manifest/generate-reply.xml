<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <!-- General Add-in Information -->
  <Id>9c9fe65f-3d0f-4e9b-c9d4-2345678901bc</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>BlocIQ</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>

  <!-- Add-in Display Name -->
  <DisplayName DefaultValue="BlocIQ Generate Reply" />

  <!-- Add-in Description -->
  <Description DefaultValue="Generate intelligent email replies using BlocIQ AI assistant" />

  <!-- Icon URLs -->
  <IconUrl DefaultValue="https://www.blociq.co.uk/icons/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://www.blociq.co.uk/icons/icon-64.png" />

  <!-- Function File -->
  <FunctionFile resid="FunctionFile" />

  <!-- Add-in Permissions -->
  <Permissions>ReadWriteMailbox</Permissions>

  <!-- Requirements -->
  <Requirements>
    <Sets DefaultMinVersion="1.3">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <!-- Rules -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
  </Rule>

  <!-- Version Overrides -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">

      <!-- Requirements -->
      <Requirements>
        <bt:Sets DefaultMinVersion="1.3">
          <bt:Set Name="Mailbox" />
        </bt:Sets>
      </Requirements>

      <!-- Hosts -->
      <Hosts>
        <Host xsi:type="MailHost">

          <!-- Desktop Form Factor -->
          <DesktopFormFactor>

            <!-- Message Read Command Surface -->
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="ReplyGroup">
                  <Label resid="GroupLabel" />
                  <Control xsi:type="Button" id="ReplyButton">
                    <Label resid="ButtonLabel" />
                    <Supertip>
                      <Title resid="ButtonLabel" />
                      <Description resid="ButtonTooltip" />
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon16" />
                      <bt:Image size="32" resid="Icon32" />
                      <bt:Image size="80" resid="Icon80" />
                    </Icon>
                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>generateReply</FunctionName>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

            <!-- Message Compose Command Surface -->
            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="ComposeGroup">
                  <Label resid="GroupLabel" />
                  <Control xsi:type="Button" id="ComposeButton">
                    <Label resid="ButtonLabel" />
                    <Supertip>
                      <Title resid="ButtonLabel" />
                      <Description resid="ButtonTooltip" />
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon16" />
                      <bt:Image size="32" resid="Icon32" />
                      <bt:Image size="80" resid="Icon80" />
                    </Icon>
                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>generateReply</FunctionName>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

          </DesktopFormFactor>

        </Host>
      </Hosts>

      <!-- Resources -->
      <Resources>
        <bt:Images>
          <bt:Image id="Icon16" DefaultValue="https://www.blociq.co.uk/icons/icon-16.png" />
          <bt:Image id="Icon32" DefaultValue="https://www.blociq.co.uk/icons/icon-32.png" />
          <bt:Image id="Icon80" DefaultValue="https://www.blociq.co.uk/icons/icon-80.png" />
        </bt:Images>

        <bt:Urls>
          <bt:Url id="FunctionFile" DefaultValue="https://www.blociq.co.uk/addin/reply" />
        </bt:Urls>

        <bt:ShortStrings>
          <bt:String id="GroupLabel" DefaultValue="BlocIQ AI" />
          <bt:String id="ButtonLabel" DefaultValue="Generate Reply" />
        </bt:ShortStrings>

        <bt:LongStrings>
          <bt:String id="ButtonTooltip" DefaultValue="Generate an intelligent reply using BlocIQ AI based on the email content" />
        </bt:LongStrings>
      </Resources>

    </VersionOverrides>
  </VersionOverrides>

</OfficeApp>