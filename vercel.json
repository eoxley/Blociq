{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "ignoreCommand": "bash scripts/should-build-frontend.sh",
  "crons": [
    {
      "path": "/api/cron/sync-inbox",
      "schedule": "*/5 * * * *"
    }
  ],
  "functions": {
    "app/api/sync-inbox/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/sync-inbox/route.ts": {
      "maxDuration": 120
    },
    "app/api/debug/cleanup-emails/route.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
} 